 <!-- <h1><span class="label label-primary">Projects</span></h1> -->
<h1><span class="label label-success"><%= link_to 'New Project', new_project_path %></span></h1>  
<br />
<br />

<div class="panel panel-footer">
<% @projects.each do |project| %>
	<h1><%= project.title %></h1>
	<p><b>Deadline</b> - <%= project.due_date %></p>
	<p><b>Description</b> - <%= project.goal %></p>


<h3><span class="label label-warning">Tasks</span></h3>
  <ul>
    <% project.tasks.each do |task| %>
    <li><%= task.title %></li>
    <li><%= task.category %></li>
	  <li><%= task.body %></li>
    <%= link_to "Edit", edit_project_task_path(project, task), class: 'btn btn-default' %>
    <%= link_to "Delete", project_task_path(project, task), method: :delete, class: 'btn btn-default' %> 
    <% end %>
  </ul>

<!-- Single button -->
<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Action <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'New Project', new_project_path %></li>
    <li><%= link_to 'New Task', new_project_task_path(project) %></li>
    <li class="divider"></li>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Edit', edit_project_path(project) %></li>
    <li><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Delete?' }%></li>
  </ul>
</div>

<% end %>
</div>
</div>


